{
  "$schema": "https://charm.land/crush.json",
  "mcp": {
    "chrome": {
      "type": "stdio",
      "command": "chrome-devtools-mcp",
      "args": [
        "-e",
        "/opt/chromium/chrome"
      ]
    },
    "perplexity": {
      "type": "stdio",
      "command": "perplexity-mcp",
      "env": {
        "PERPLEXITY_TIMEOUT_MS": "600000"
      }
    }
  }
}
