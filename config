    position top
    output $mon
    strip_workspace_numbers yes
    tray_output primary
    # tray_padding 4
    tray_padding 6
    # font pango:JetBrains Mono Nerd Font Bold 12.5
    font pango:JetBrains Mono Nerd Font SemiBold 13.5
    separator_symbol " "
    # status_command i3status --config ~/.config/i3/i3status.conf
    # status_command i3status --config ~/.config/i3/i3status-catppuccin.conf
    status_command i3status --config ~/.config/i3/i3status-dracula.conf

#                          border 	 bg		   txt		 indicator
    colors {
        separator          $fg
        background         $darkgray 
        statusline         $fg
    	focused_workspace  $darkgray $fg       $darkgray $purple   
    	active_workspace   $darkgray $darkgray $yellow   $purple   
    	inactive_workspace $darkgray $darkgray $yellow   $purple   
    	# urgent_workspace   $darkgray $red      $fg       $red      
    	urgent_workspace   $darkgray $red      $darkgray $red      
    }
}

